<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient"
    android:visibility="visible"
    android:id="@+id/mainreg">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRATION PAGE"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/regtoolbar"
        android:textSize="25sp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_below="@+id/regtoolbar"
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:hint="Enter Your Name"
        android:background="@drawable/edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/name"
        android:drawableLeft="@drawable/ic_name"
        android:drawablePadding="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENDER"
        android:layout_below="@+id/name"
        android:id="@+id/gender"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="#ffffff"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/gender"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/radiogrp">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="Male"
            android:id="@+id/male"
            android:textColor="#ffffff"
            android:textStyle="bold" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="Female"
            android:id="@+id/female"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:layout_below="@+id/gender"
        android:id="@+id/linearreg"
        android:orientation="horizontal"
        android:weightSum="3"
       android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp">

    <com.hbb20.CountryCodePicker
        android:id="@+id/countrycode"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:ccp_countryPreference="us,in"
        android:gravity="center"
        app:ccp_textSize="11sp"
        android:background="@drawable/edit_text"/>

    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:hint="Enter Your Mobile Number"
        android:background="@drawable/edit_text"
      android:layout_weight="2"
        android:maxLength="20"
       android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/regmobileno"
        android:layout_below="@+id/radiogrp"
        android:drawableLeft="@drawable/ic_pass"
        android:drawablePadding="5dp"
        />
    </LinearLayout>
    <!--<EditText
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:hint="Enter Your Email ID(Optional)"
        android:background="@drawable/edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/regemail"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="5dp"
        android:layout_below="@+id/linearreg"
        android:inputType="text"/>-->
    <EditText
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_mobile"
        android:drawablePadding="5dp"
        android:background="@drawable/edit_text"
        android:hint="Enter Your Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/regpassword"
        android:layout_below="@+id/linearreg"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="390dp"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/ic_mobile"
        android:drawablePadding="5dp"
        android:hint="Enter Your Confirm Password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/edit_text"
        android:id="@+id/regconfpass"
        android:layout_below="@+id/regpassword"
        android:inputType="textPassword"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regconfpass"
        android:layout_centerHorizontal="true"
        android:text="Click here to very Phone Number"
        android:layout_marginTop="15dp"
        android:id="@+id/verifyphone"
        android:background="@drawable/edit_text"
        android:padding="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@+id/verifyphone"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:id="@+id/reghidden">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Verification Code"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/codehead"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/codehead"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter verification code"
        android:textAlignment="center"
        android:id="@+id/codeans"
        android:background="@drawable/edit_text"
        android:inputType="number"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/codeans"
            android:layout_centerHorizontal="true"
            android:text="Submit"
            android:background="@drawable/edit_text"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/workerreg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Wait"
            android:id="@+id/pleasewait"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/codeprog"
            android:padding="10dp"
            android:layout_below="@+id/pleasewait"/>
    </RelativeLayout>
