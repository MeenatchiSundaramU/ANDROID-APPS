<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".sell.EsellregisterActivity"
    android:orientation="vertical">
<androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@drawable/gradient"
    android:id="@+id/esellregistertoolbar"/>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/gradient">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:hint="Enter your State"
        android:background="@drawable/edit_text"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/esellregstate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000"/>
    <EditText

        android:layout_width="380dp"
        android:layout_height="30dp"
        android:hint="Enter your District"
        android:id="@+id/esellregdistrict"
        android:layout_below="@+id/esellregstate"
        android:background="@drawable/edit_text"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000"/>
        <EditText
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:hint="Enter your DOB(DD/MM/YYYY)"
            android:inputType="text"
            android:id="@+id/esellregdob"
            android:layout_below="@+id/esellregdistrict"
            android:background="@drawable/edit_text"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:hint="Enter your Address"
            android:id="@+id/esellregaddress"
            android:layout_below="@+id/esellregdob"
            android:background="@drawable/edit_text"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:hint="Enter your Pincode"
            android:id="@+id/esellregpincode"
            android:inputType="number"
            android:layout_below="@+id/esellregaddress"
            android:background="@drawable/edit_text"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:text="ID PROOF"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_below="@+id/esellregpincode"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_below="@+id/esellregpincode"
            android:layout_toRightOf="@+id/id"
            android:layout_marginTop="10dp" />
        <EditText
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:id="@+id/esellacholdername"
            android:layout_below="@+id/spinner"
            android:hint="Enter Account Holder Name"
            android:background="@drawable/edit_text"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:id="@+id/esellbankname"
            android:layout_below="@+id/esellacholdername"
            android:hint="Enter Bank Name"
            android:background="@drawable/edit_text"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>
        <EditText
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:id="@+id/esellacno"
            android:layout_below="@+id/esellbankname"
            android:hint="Enter Account Number"
            android:background="@drawable/edit_text"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:inputType="number"/>
        <EditText
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:id="@+id/esellifsc"
            android:layout_below="@+id/esellacno"
            android:hint="Enter IFSC Code"
            android:background="@drawable/edit_text"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="380dp"
            android:layout_height="30dp"
            android:id="@+id/passbook"
            android:layout_below="@id/esellifsc"
            android:text="ADD IMAGE OF YOUR PASSBOOK "
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/esellpassbook"
            android:src="@drawable/ic_passbook"
            android:layout_below="@+id/passbook"
            android:layout_marginLeft="55dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD IMAGE FROM GALLERY"
            android:id="@+id/passbookbtn"
            android:layout_below="@+id/passbook"
            android:layout_toRightOf="@id/esellpassbook"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/esellidproof"
            android:layout_below="@id/esellpassbook"
            android:text="ADD IMAGE OF YOUR ID PROOF "
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#ffffff"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/esellproofimage"
            android:src="@drawable/ic_passbook"
            android:layout_below="@+id/esellidproof"
            android:layout_marginLeft="55dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD IMAGE FROM GALLERY"
            android:id="@+id/esellidbtn"
            android:layout_below="@+id/esellidproof"
            android:layout_toRightOf="@+id/esellpassbook"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:textStyle="bold"/>
       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/esellsubmit"
           android:layout_below="@id/esellidbtn"
           android:layout_centerHorizontal="true"
           android:text="SUBMIT"
           android:background="@drawable/edit_text"
           android:layout_marginTop="15dp"
           android:textStyle="bold"/>







    </RelativeLayout>


</ScrollView>

</LinearLayout>