<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sell.HomeActivity"
    android:orientation="vertical"
    android:background="@drawable/home1_back">
 <!-- <androidx.appcompat.widget.Toolbar
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:minHeight="?actionBarSize"
    android:background="#00ff7f"/>  -->
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="HOME PAGE"
    android:textColor="@color/green"
    android:textSize="30sp"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:textStyle="bold"/>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:layout_marginTop="85dp"
      >
  <ImageView
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/sellicon"
      android:id="@+id/homeesellicon"
      android:layout_marginLeft="45dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/homeesellicon"
      android:layout_centerHorizontal="true"
      android:text="E-SELL"
      android:textColor="@color/green"
      android:textSize="25sp"
      android:textStyle="bold"
      android:layout_marginLeft="10dp"

      android:id="@+id/homeeselltext"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/homeeselltext"
      android:layout_toRightOf="@+id/homeesellicon"
      android:text="SELL YOUR PRODUCTS"
      android:textStyle="bold"
      android:background="@drawable/edit_text"
      android:id="@+id/homeesellbtn"
      android:layout_marginLeft="10dp"
      android:textColor="@color/green"/>
  </RelativeLayout>





<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="55dp"
    >
  <ImageView
      android:layout_width="100dp"
      android:layout_height="90dp"
      android:src="@drawable/ebuy"
      android:id="@+id/homeebuyicon"
      android:layout_marginLeft="45dp" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_toRightOf="@+id/homeebuyicon"
      android:layout_centerHorizontal="true"
      android:textColor="@color/green"
      android:text="E-BUY"
      android:textSize="25sp"
      android:textStyle="bold"
     android:layout_marginLeft="10dp"
      android:id="@+id/homeebuytext"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
    android:layout_below="@id/homeebuytext"
    android:layout_toRightOf="@+id/homeebuyicon"
    android:text="BUY PRODUCTS"
      android:textStyle="bold"
      android:background="@drawable/edit_text"
      android:layout_marginLeft="10dp"
      android:id="@+id/homeebuybtn"
      android:textColor="@color/green"/>

</RelativeLayout>
</LinearLayout>