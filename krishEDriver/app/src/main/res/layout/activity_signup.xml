<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticationActivity.SignupActivity">

    <EditText
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:id="@+id/reg_name"
        android:layout_centerHorizontal="true"
        android:hint="Enter your name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_name"
        android:text="Gender"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:textSize="18sp"
        android:id="@+id/reg_gender"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/reg_gender"
        android:layout_below="@+id/reg_name">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_male"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textStyle="bold"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reg_female"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textStyle="bold"/>
        </LinearLayout>
    </RadioGroup>
    <EditText
        android:layout_width="390dp"
        android:id="@+id/reg_phoneno"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_gender"
        android:hint="Enter Phone Number"/>
    <EditText
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:id="@+id/reg_email"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_phoneno"
        android:layout_marginTop="10dp"
        android:hint="Enter Email ID"/>
    <EditText
        android:layout_width="390dp"
        android:id="@+id/reg_pass"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_email"
        android:hint="Enter Password"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:id="@+id/reg_confpass"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_pass"
        android:layout_marginTop="10dp"
        android:inputType="textPassword"
        android:hint="Enter Confirm Password"/>
    <EditText
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:id="@+id/reg_address"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_confpass"
        android:layout_marginTop="10dp"
        android:maxLines="2"
        android:hint="Enter your Address"/>
    <EditText
        android:layout_width="390dp"
        android:id="@+id/reg_pincode"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_address"
        android:hint="Enter Pincode"/>
    <EditText
        android:layout_width="390dp"
        android:layout_height="50dp"
        android:id="@+id/reg_vehicleno"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_pincode"
        android:layout_marginTop="10dp"
        android:hint="Enter Vehicle No"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reg_vehicleno"
        android:text="Select Valid ID proof"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="17sp"
        android:id="@+id/reg_id"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/idproof"
        android:layout_toRightOf="@+id/reg_id"
        android:layout_below="@+id/reg_vehicleno">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reg_aadhar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar Card"
                android:textStyle="bold"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reg_driveinglic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drive License"
                android:textStyle="bold"
                android:id="@+id/drivelicense"/>
        </LinearLayout>
    </RadioGroup>
    <Button
        android:id="@+id/uploadproof"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/idproof"
        android:layout_centerHorizontal="true"
        android:text="Click here to upload ID proof"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadproof"
        android:text="Register"
        android:id="@+id/register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

</RelativeLayout>
</ScrollView>