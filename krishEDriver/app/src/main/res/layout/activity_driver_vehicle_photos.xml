<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AuthenticationActivity.DriverVehiclePhotos"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/circularimage1"
        app:civ_border_width="4dp"
        app:civ_border_color="#000000"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/regphoto1"
        android:text="Select Photo"
        android:textStyle="bold"
        android:background="@drawable/rounded_photo"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/circularimage2"
        android:layout_below="@+id/circularimage1"
        app:civ_border_width="4dp"
        app:civ_border_color="#000000"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/reg_photo2"
        android:text="Select Photo"
        android:textStyle="bold"
        android:layout_below="@+id/circularimage1"
        android:background="@drawable/rounded_photo"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/circularimage2"
        android:id="@+id/circularimage3"
        app:civ_border_width="4dp"
        app:civ_border_color="#000000"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/regphoto3"
        android:layout_below="@+id/circularimage2"
        android:text="Select Photo"
        android:textStyle="bold"
        android:background="@drawable/rounded_photo"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regphoto3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="submit"
        android:id="@+id/photo_submits"/>
</RelativeLayout>
</ScrollView>