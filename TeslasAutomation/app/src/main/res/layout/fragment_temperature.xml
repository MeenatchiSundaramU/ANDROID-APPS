<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TemperatureFragment">

    <TextView
        android:layout_width="wrap_content"
        android:background="@drawable/btn_stroke"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:text="TEMPERATURE SENSOR"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:id="@+id/temp_head"
        android:layout_marginTop="70dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(IN CELSIUS)"
        android:padding="3dp"
        android:background="@drawable/btn_stroke"
        android:layout_below="@+id/temp_head"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/temp_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>
    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/temp_btn"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/temp_head"
        android:id="@+id/temp_value_btn"
        android:text="0"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:layout_marginTop="60dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLICK ME TO RECORD"
        android:layout_below="@+id/temp_value_btn"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_stroke"
        android:padding="10dp"
        android:id="@+id/temp_record_btn"
        android:textStyle="bold"/>
</RelativeLayout>