<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="5"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/updateimage"
        android:layout_weight="1"
        app:civ_border_width="3dp"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginTop="10dp"
        tools:ignore="ExtraText">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tomato"
        android:id="@+id/cropname"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginLeft="70dp"
        android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Base Price:Rs."
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_below="@+id/cropname"
            android:layout_margin="10dp"
            android:id="@+id/baseprice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/baseprice"
            android:layout_below="@+id/cropname"
            android:id="@+id/cropprice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Price:Rs."
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_below="@+id/baseprice"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/marketprice"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="#000000"
            android:textSize="17sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/marketprice"
            android:layout_below="@+id/baseprice"
            android:id="@+id/marketpricevalue"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"
            android:textColor="#000000"
            android:id="@+id/updates"
            android:layout_toRightOf="@id/cropprice"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="35dp"/>
    </RelativeLayout>


</LinearLayout>