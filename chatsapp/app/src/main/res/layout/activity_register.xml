<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/circularimage"
        app:civ_border_width="4dp"
        app:civ_border_color="#ffffff"/>
<Button
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="25dp"
    android:id="@+id/regphoto"
    android:text="Select Photo"
    android:textStyle="bold"
    android:background="@drawable/rounded_photo"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Username"
        android:drawableStart="@drawable/ic_username"
        android:drawablePadding="6dp"
        android:layout_below="@+id/regphoto"
        android:layout_marginTop="10dp"
        android:id="@+id/regusername"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:background="@drawable/rounded_edit"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter E-mail"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="6dp"
        android:layout_below="@+id/regusername"
        android:layout_marginTop="10dp"
        android:id="@+id/regemail"
        android:background="@drawable/rounded_edit"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:drawableStart="@drawable/ic_pass"
        android:drawablePadding="6dp"
        android:hint="Enter Password"
        android:layout_below="@+id/regemail"
        android:layout_marginTop="10dp"
        android:id="@+id/regpass"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:background="@drawable/rounded_edit"
        android:inputType="textPassword"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Enter Confirm Password"
        android:drawableStart="@drawable/ic_pass"
        android:drawablePadding="6dp"
        android:layout_below="@+id/regpass"
        android:layout_marginTop="10dp"
        android:id="@+id/regconfpass"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="5dp"
        android:background="@drawable/rounded_edit"
        android:inputType="textPassword"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_below="@+id/regconfpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/regbtn"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_edit"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an Account?"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/regbtn"
        android:layout_marginTop="10dp"
        android:id="@+id/alreadyac"
        android:textStyle="bold"
        android:textColor="#ffffff"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:outlineSpotShadowColor="@color/colorPrimary"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:id="@+id/regprogress"
        android:visibility="invisible"/>

</RelativeLayout>