                    android:id="@+id/fish_4"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="17sp" />
            </LinearLayout>






        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:id="@+id/fish5_image"
                    android:src="@drawable/fish_5"
                    app:civ_border_width="5dp"
                    app:civ_border_color="#FF9933"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fish_5"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:id="@+id/fish6_image"
                    android:src="@drawable/fish_6"
                    app:civ_border_width="5dp"
                    app:civ_border_color="#FF9933"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fish_6"
                    android:layout_gravity="center"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="17sp" />
            </LinearLayout>

        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FF9933"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:hint="Enter Total Flesh Quantity(in Kg)"
            android:textColor="@android:color/white"
            android:id="@+id/total_fish_flesh"
            android:inputType="number"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#FF9933"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/white"
            android:hint="Enter flesh price per Kg"
            android:id="@+id/flesh_fish_price"
            android:inputType="number"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@android:color/holo_orange_light"
            android:layout_marginTop="30dp"
            android:text="Add Product"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:id="@+id/add_fish_product"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:id="@+id/kaadai_view"
            android:layout_centerInParent="true">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:id="@+id/kaadai_image"
                    android:src="@drawable/fish_3"
                    app:civ_border_width="5dp"
                    app:civ_border_color="#FF9933"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="#FF9933"
